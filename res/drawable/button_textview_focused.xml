<?xml version="1.0" encoding="UTF-8"?>   
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">   
<!-- 填充的颜色,渐变色 -->  
<gradient android:startColor="#90076ea9" android:endColor="#076ea9" android:angle="90" />  
<!-- 设置边框颜色 -->  
<stroke android:width="1dip" android:color="#076ea9"/>   
<!-- android:radius 弧形的半径 -->  
<corners android:radius="4dip" />  
<!-- padding：Button里面的文字与Button边界的间隔 -->  
<padding android:left="13dp" android:top="2dp" android:right="13dp" android:bottom="2dp" />   
</shape>
